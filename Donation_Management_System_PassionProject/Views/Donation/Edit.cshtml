@model Donation_Management_System_PassionProject.Models.DonationDto

@{
    ViewBag.Title = "Edit";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2>Edit Donation</h2>
    <form action="/Donation/Update/@Model.DonationId" method="post">
        <div style="display:none;">
            @* Pass through the Donation ID *@
            <input type="text" name="DonationId" value="@Model.DonationId" />
        </div>

        <div class="form-group">
            <label>Donor Name:</label>
            <p>@Model.DonorName</p>
        </div>

        <div class="form-group">
            <label>Campaign Name:</label>
            <p>@Model.CampaignName</p>
        </div>

        <div class="form-group">
            <label>Donation Amount:</label>
            <input type="text" class="form-control" name="DonationAmount" value="@Model.DonationAmount" />
        </div>

        <div class="form-group">
            <label>Donation Date:</label>
            <input type="date" class="form-control" name="DonationDate" value="@Model.DonationDate.ToString("yyyy-MM-dd")" />
        </div>

        <button type="submit" class="btn btn-primary">Update Donation</button>
        <a href="/Donation/List" class="btn btn-secondary">Cancel</a>
    </form>
</div>
