@model Donation_Management_System_PassionProject.Models.CampaignDto

@{
    ViewBag.Title = "Delete Campaign";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h1 class="text-center mb-3">Delete Campaign</h1>

    <div class="card">
        <div class="card-header">
            <h2>@Model.CampaignName</h2>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label class="control-label">Description:</label>
                <p class="form-control-static">@Model.CampaignDescription</p>
            </div>
            <div class="form-group">
                <label for="CampaignStartDate">Start Date:</label>
                <p class="form-control-static">@Model.CampaignStartDate</p>
            </div>
            <div class="form-group">
                <label for="CampaignEndDate">Start Date:</label>
                <p class="form-control-static">@Model.CampaignEndDate</p>
            </div>
            <p>Are you sure you want to delete this campaign?</p>
            <form action="/Campaign/Delete/@Model.CampaignId" method="POST" style="display:inline;">
                <input type="submit" value="Confirm Delete" class="btn btn-danger" />
            </form>
            <a href="@Url.Action("List", "Campaign")" class="btn btn-secondary">Cancel</a>

        </div>
    </div>
</div>
