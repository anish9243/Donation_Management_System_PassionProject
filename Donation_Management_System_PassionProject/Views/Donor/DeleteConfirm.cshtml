@model Donation_Management_System_PassionProject.Models.DonorDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2>Are you sure you want to delete this Donor?</h2>
        </div>
        <div class="card-body">
            <h3>@Model.DonorName</h3>
            <p><strong>Email:</strong> @Model.DonorEmail</p>
            <div class="mt-4">
                <a href="/Donor/List" class="btn btn-secondary mr-2">Cancel</a>
                <form action="/Donor/Delete/@Model.DonorId" method="POST" style="display:inline;">
                    <input type="submit" value="Confirm Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
    